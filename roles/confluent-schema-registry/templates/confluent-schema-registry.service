[Unit]
Description=confluent-schema-registry
Before=
After=network.target

[Service]
User=kafka
Environment="JAVA_HOME=/usr/lib/jvm/java-8-oracle" "JRE_HOME=/usr/lib/jvm/java-8-oracle/jre" "KAFKA_HEAP_OPTS='{{schema_registry_HEAP_OPTS}}'"
ExecStart=/usr/bin/schema-registry-start /etc/confluent-schema-registry/schema-registry.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target