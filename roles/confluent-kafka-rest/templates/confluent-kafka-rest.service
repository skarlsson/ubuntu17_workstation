[Unit]
Description=confluent-schema-registry
Before=
After=network.target

[Service]
User=kafka
Environment="JAVA_HOME=/usr/lib/jvm/java-8-oracle" "JRE_HOME=/usr/lib/jvm/java-8-oracle/jre" "KAFKA_HEAP_OPTS='{{rest_proxy_HEAP_OPTS}}'"
ExecStart=/usr/bin/kafka-rest-start /etc/confluent-kafka-rest/confluent-kafka-rest.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target